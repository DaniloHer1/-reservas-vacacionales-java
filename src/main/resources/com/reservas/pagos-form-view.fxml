<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="425.0" prefWidth="342.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.reservas.controller.PagoFormController">
    <children>
        <Label layoutX="110.0" layoutY="14.0" text="Nuevo Pago">
            <font>
                <Font size="26.0" />
            </font>
        </Label>

        <Label layoutX="52.0" layoutY="73.0" text="Reserva:" />
        <ComboBox fx:id="cbReserva" layoutX="112.0" layoutY="69.0" prefWidth="150.0" />

        <Label layoutX="52.0" layoutY="115.0" text="Monto:" />
        <TextField fx:id="txtMonto" layoutX="112.0" layoutY="111.0" prefWidth="150.0"
                   promptText="0.00" />

        <Label layoutX="52.0" layoutY="153.0" text="MÃ©todo Pago:" />
        <RadioButton fx:id="rbTarjeta" layoutX="134.0" layoutY="183.0"
                     mnemonicParsing="false" text="Tarjeta">
            <toggleGroup>
                <ToggleGroup fx:id="grupoMetodo" />
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="rbEfectivo" layoutX="134.0" layoutY="209.0"
                     mnemonicParsing="false" text="Efectivo"
                     toggleGroup="$grupoMetodo" />
        <RadioButton fx:id="rbTransferencia" layoutX="134.0" layoutY="235.0"
                     mnemonicParsing="false" text="Transferencia"
                     toggleGroup="$grupoMetodo" />

        <Label layoutX="52.0" layoutY="281.0" text="Estado:" />
        <ComboBox fx:id="cbEstado" layoutX="112.0" layoutY="277.0" prefWidth="150.0" />

        <Label layoutX="60.0" layoutY="323.0" text="Fecha:" />
        <TextField fx:id="txtFecha" editable="false" layoutX="113.0" layoutY="319.0"
                   prefWidth="150.0" />

        <Button fx:id="btnGuardar" layoutX="99.0" layoutY="375.0"
                mnemonicParsing="false" onAction="#guardarPagoEnBD"
                text="Guardar" />
        <Button fx:id="btnCancelar" layoutX="195.0" layoutY="375.0"
                mnemonicParsing="false" onAction="#cancelar"
                text="Cancelar" />
    </children>
</AnchorPane>