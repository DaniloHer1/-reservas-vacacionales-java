<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="460.0" prefWidth="656.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reservas.controller.PagoController">
   <children>
      <TableView fx:id="table" layoutX="21.0" layoutY="130.0" prefHeight="200.0" prefWidth="608.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colReserva" prefWidth="75.0" text="Id Reserva" />
            <TableColumn fx:id="colFecha" prefWidth="117.0" text="Fecha" />
            <TableColumn fx:id="colMonto" prefWidth="116.0" text="Monto" />
            <TableColumn fx:id="colMetodo" prefWidth="105.0" text="Método" />
            <TableColumn fx:id="colEstado" prefWidth="119.0" text="Estado" />
        </columns>
      </TableView>
      <Button fx:id="btnAñadir" layoutX="58.0" layoutY="363.0" mnemonicParsing="false" onAction="#añadirPago" text="Añadir" />
      <Button fx:id="btnEliminar" layoutX="341.0" layoutY="363.0" mnemonicParsing="false" text="Eliminar" onAction="#borrarPago" />
      <Button fx:id="btnActualizar" layoutX="458.0" layoutY="363.0" mnemonicParsing="false" onAction="#actualizarTabla" text="Actualizar tabla" />
      <Label layoutX="14.0" layoutY="14.0" text="Gestión de Pagos">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="btnModificar" layoutX="192.0" layoutY="363.0" mnemonicParsing="false" text="Modificar" onAction="#editarPago" />
   </children>
</AnchorPane>
